@article{Lenaerts2012b,
author = {Lenaerts, J. T. M. and van den Broeke, M. R.},
title = {Modeling drifting snow in Antarctica with a regional climate model: 2. Results},
journal = {Journal of Geophysical Research: Atmospheres},
volume = {117},
