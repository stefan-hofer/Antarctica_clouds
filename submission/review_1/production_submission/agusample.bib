author = {Agosta, C{\'{e}}cile and Amory, Charles and Kittel, Christoph and Orsi, Anais and Favier, Vincent and Gall{\'{e}}e, Hubert and {Van Den Broeke}, Michiel R. and Lenaerts, Jan T.M. and {Van Wessem}, Jan Melchior and {Van De Berg}, Willem Jan and Fettweis, Xavier},
