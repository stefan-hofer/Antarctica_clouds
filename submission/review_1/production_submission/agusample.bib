file = {:home/sh16450/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Fettweis et al. - 2013 - Brief communication Important role of the mid-tropospheric atmospheric circulation in the recent surface melt i.pdf:pdf},
isbn = {1994-0424},
issn = {1994-0424},
journal = {The Cryosphere},
