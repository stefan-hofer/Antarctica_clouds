isbn = {0260-3055},
issn = {0260-3055},
journal = {Annals of Glaciology},
month = {sep},
pages = {311--316},
title = {{Surface mass-balance observations and automatic weather station data along a transect near Kangerlussuaq, West Greenland}},
url = {https://www.cambridge.org/core/product/identifier/S0260305500265208/type/journal{\_}article},
