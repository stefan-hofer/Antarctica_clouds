issn = {0022-4928},
journal = {Journal of the Atmospheric Sciences},
title = {{Mesoscale Modeling of Springtime Arctic Mixed-Phase Stratiform Clouds Using a New Two-Moment Bulk Microphysics Scheme}},
year = {2005}
}
