@article{Yamanouchi1984,
author = {Yamanouchi, Takashi and Kawaguchi, Sadao},
title = {Longwave radiation balance under a strong surface inversion in the Katabatic Wind Zone, Antarctica},
journal = {Journal of Geophysical Research: Atmospheres},
volume = {89},
