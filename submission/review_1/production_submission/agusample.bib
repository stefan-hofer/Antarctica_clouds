issn = {09307575},
journal = {Climate Dynamics},
keywords = {Big-brother experiment,Domain size,Lateral boundary conditions,Regional climate model,Small-scale features,Spin-up},
title = {{Regional climate model sensitivity to domain size}},
year = {2009}
}
